<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.test.vigsa.Fragment.LoginFragment">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="#1D1D1D">

  <!--Scroll-->
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/logo_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_to"
         android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
          android:id="@+id/Login_text"
        android:textSize="15dp"
        android:textColor="#636D55"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGO"
        android:layout_centerHorizontal="true"
         android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/Login_text"
        android:padding="2dp"
        android:textSize="15dp"
        android:textColor="#FFF"/>

   </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/logo_layout"
       android:orientation="horizontal"
       android:padding="15dp"
       android:weightSum="3"
       android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_gravity="center"
         android:layout_marginEnd="10dp"
        android:padding="2dp">

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Login with"
         android:gravity="center"
         android:textAllCaps="true"
         android:id="@+id/login_f"
         android:layout_marginTop="2dp"
         android:layout_centerHorizontal="true"
         android:padding="0dp"
         android:textSize="8dp"
         android:textColor="#ECF0F1"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Facebook"
         android:textAllCaps="true"
         android:gravity="center"
         android:layout_centerHorizontal="true"
         android:layout_below="@+id/login_f"
         android:layout_marginTop="2dp"
         android:padding="2dp"
         android:textSize="8dp"
         android:textColor="#3B5998"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">
     
     
     <ImageView
         android:layout_width="80dp"
         android:layout_height="100dp"
         android:layout_weight="1"

         android:src="@drawable/facebook"
         />

     <ImageView
         android:layout_width="80dp"
         android:layout_height="100dp"
         android:layout_weight="1"
         android:src="@drawable/twitter"
         />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
         android:layout_marginEnd="10dp"
        android:padding="2dp">

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Login with"
         android:gravity="center"
         android:textAllCaps="true"
         android:id="@+id/login_G"
         android:layout_marginTop="2dp"
         android:layout_centerHorizontal="true"
         android:padding="2dp"
         android:textSize="8dp"
         android:textColor="#ECF0F1"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Twitter"
         android:textAllCaps="true"
         android:gravity="center_horizontal"
         android:layout_centerHorizontal="true"
         android:layout_below="@+id/login_G"
         android:layout_marginTop="2dp"
         android:padding="2dp"
         android:textSize="8dp"
         android:textColor="#00aced"/>

    </RelativeLayout>
   </LinearLayout>


 <!--scroll inside-->
  </RelativeLayout>

  </ScrollView>

<!--scroll end-->


 </RelativeLayout>


</FrameLayout>
